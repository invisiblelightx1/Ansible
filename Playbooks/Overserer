---
- name: Install Portainer
  hosts: Cloud
  become: true
  tasks:
    - name:  create volume
      ansible.builtin.shell:
        cmd: docker volume create overseerr_data
      
    - name: install portainer  
      ansible.builtin.shell:
        cmd:  docker run -d --name overseerr -e LOG_LEVEL=debug -e TZ=America/Los_Angeles -e PORT=5055 `#optional` -p 5055:5055 -v overseerr_data:/data \--restart unless-stopped \sctx/overseerr 